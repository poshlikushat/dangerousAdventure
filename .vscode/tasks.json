{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SDL2 Project",
            "type": "shell",
            "command": "/usr/bin/clang",
            "args": [
                "-std=c17", 
                "-I/opt/homebrew/opt/sdl2/include/SDL2", 
                "-I/opt/homebrew/opt/sdl2_image/include/SDL2", 
                "-I/opt/homebrew/opt/sdl2_mixer/include/SDL2",
                "${fileDirname}/main.c", 
                "${fileDirname}/system/input.c",
                "${fileDirname}/system/init.c", 
                "${fileDirname}/system/draw.c", 
                "${fileDirname}/system/atlas.c",
                "${fileDirname}/system/textures.c",
                "${fileDirname}/system/util.c",
                "${fileDirname}/json/cJSON.c",
                "${fileDirname}/game/dungeon.c",
                "${fileDirname}/game/entities.c",
                "${fileDirname}/game/map.c",
                "${fileDirname}/game/player.c",
                "${fileDirname}/game/fogOfWar.c",
                "-o",
                "${fileDirname}/output/myProgram",
                "-L/opt/homebrew/lib", 
                "-lSDL2", 
                "-lSDL2_image",
                "-lSDL2_mixer"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Компиляция SDL2 проекта"
        }
    ]
}
